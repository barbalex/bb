/*--------------------------------*\
       #errors
\*--------------------------------*/

#errors
  position: absolute
  bottom: 8px
  right: 8px
  margin-left: 8px
  background-color: orange
  box-shadow: 0 5px 10px rgba(0, 0, 0, 0.2)
  border: 1px solid #CCC
  border-radius: 3px
  padding-top: 10px
  padding-bottom: 10px
  z-index: 3

#errors .errorContainer
  border: none

#errors .errorContainer:first-of-type .error
  padding-right: 27px

#errors .error
  padding-left: 10px
  padding-right: 10px

#errors .error p
  margin-bottom: 0
#errors .error p+p
  margin-bottom: -2px

#errors hr
  margin-top: 8px
  margin-bottom: 8px
  box-shadow: 0 5px 10px rgba(0, 0, 0, 0.2)
  border: 1px solid #CCC


