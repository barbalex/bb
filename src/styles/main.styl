@import '../../node_modules/react-bootstrap-datetimepicker/css/bootstrap-datetimepicker.css'
@import '../../node_modules/gemini-scrollbar/gemini-scrollbar.css'

body
  margin-top 52px
  hyphens auto

#nav-wrapper.affix
  top 0
  width 100%
  z-index 1
  
body .navbar
  margin-bottom 0
  
body .navbar-inverse .navbar-brand
  color #EDF4F8
  cursor pointer

p,
div
	font-size medium

a,
a:link
	cursor pointer

.home-title h2
	margin-top 30px
	margin-bottom 50px

.introHeader {
	margin-top: -10px
	height: 150px
  padding: 15px
}

.introHeader:before
  content ' '
  background-image url('../../images/ocean.jpg')
  display block
  position absolute
  left 0
  top 0
  width 100%
  height 150px
  z-index: -1
  opacity: 1
  
.introText
	font-size 28px
	font-weight 600
	line-height 30px
	color #FFF
	text-shadow 2px 2px 3px black, -2px -2px 3px black, 2px -2px 3px black, -2px 2px 3px black

.introText
  text-align center
	
.introTitle
	margin-top 20px
	font-size 42px
	font-weight 800
	line-height 46px

body .navbar
	border-radius 0
	a
		color #EDF4F8 !important

.navbar-inverse
	background-image url('../../images/oceanDark.jpg')
 
// bootstrap only padds jumbotron above 768px screen width!
.eventsIntro.jumbotron
  padding-left 30px
  padding-right 30px
  text-align center
  // background-color transparent
  background-color rgba(0, 109, 255, 0.05)
  border 1px solid #ddd
  border-radius 4px
  box-shadow 0 1px 1px rgba(0, 0, 0, 0.05)

.year > .panel-heading,
.category > .panel-heading,
.commentaries .panel-heading,
.statistics .panel-heading,
.actors .panel-heading
  background-image url('../../images/oceanDark.jpg')
  
.year.not-active > .panel-heading,
.category.not-active > .panel-heading
  border-radius 3px
  
.panel-group .year > .panel-heading,
  background-color transparent

.year > .panel-heading a,
.category > .panel-heading a,
.commentaries .panel-heading a,
.statistics .panel-heading a,
.actors .panel-heading a
  color #EDF4F8
  font-weight bold
	
.statistic-title
	margin-top 40px

.statistic-title-text
	font-weight bold
	text-decoration underline
	
.col400,
.col500
	column-count 1
	column-gap 20px

.commentaries a.list-group-item
  padding-right 50px
	
.commentary
	p,
	.row,
	table
		margin-bottom 20px
	h2
		text-align center
		font-size x-large
		font-weight 800
		margin-top 60px
		margin-bottom 20px
.commentaries .h2-subtitle
  text-align center
  font-size large
  font-weight 800
  margin-top -10px
  margin-bottom 0

.commentaries .h2-subtitle-top
  text-align center
  font-size large
  font-weight 800
  margin-bottom -40px
  
.commentary h3
  text-align center
  font-size large
  font-weight 800
  margin-top 40px
  margin-bottom 20px

.actors,
.actors
	h1
		margin-top 40px
		font-size x-large
		font-weight 700
	h2
		font-size large
		font-weight 700
		margin-top 40px
		margin-bottom 20px

.publication
  h2
    font-size medium
    font-weight 700
    margin-top 30px
    margin-bottom 10px 

.tab-content .actors
	margin-top 20px

.page
  h1
    font-size 36px
    font-weight 500
  h2
    font-size x-large
    font-weight 700
  h3
    font-size large
    font-weight 700

.manualHyphens
  hyphens: manual

/*--------------------------------*\
    3. #Events
\*--------------------------------*/

.eventsIntro
  margin-top 30px
  margin-bottom 10px

.events table
  display table
  table-layout fixed
  width 100%
  margin-bottom 0
.events table tr td
  border-top 1px solid #ECECEC !important
.events .monthRow
  // border-radius 3px
  // background-clip padding-box
  // border-collapse separate
  background-image url('../../images/oceanDark.jpg')
  color #EDF4F8
  font-weight bold
.events .monthRow td
  padding-left 10px
  
.events .monthlyStatisticsRow
  background-color rgba(0,109,255,0.05)

.events .day
  width 60px
  column-width 60px
  padding-right 20px
  text-align right
.events .dayWithEvents p
  margin-top 5px
.events .migration,
.events .politics
  width 50%
  column-width 50%
  word-wrap break-word
.events td ul
  padding-left 10px
  margin-bottom 0
.events td ul li
  margin-bottom 5px
  margin-top 5px
.events td ul li+li
  margin-top 10px
.events td p
  margin-bottom 0
  
// fix table header
.events
  position: relative
#eventsTableBody
  overflow auto
  height calc(100vh - 79px)
  margin-top 50px
  border-top 1px solid #ECECEC
  border-bottom 1px solid #ECECEC
#eventsTableHead
  position absolute

// make sure glyphicon and link text are on same line
.events td a
  white-space nowrap
  
.events p.event-weather
  // font-weight bold
  position relative
.events li.event-weather
  list-style-type none
.events p.event-weather:before
  font-family 'Glyphicons Halflings'
  content '\2601'
  font-size 1.4em
  position absolute
  top -3px
  left -26px

.events p.event-statistics,
.events p.event-monthlyStatistics
  position relative
.events li.event-statistics,
.events li.event-monthlyStatistics
  list-style-type none
.events p.event-statistics:before,
.events p.event-monthlyStatistics:before
  font-family 'Glyphicons Halflings'
  content '\e185'
  font-size 1em
  position absolute
  top -2px
  left -23px

.events p.event-victims
  position relative
.events li.event-victims
  list-style-type none
.events p.event-victims:before
  font-family 'Glyphicons Halflings'
  content '\e101'
  font-size 1.3em
  position absolute
  top -4px
  left -26px
  
a.typeahead-token-close
  margin-left 5px
.typeahead-selector .list-group-item:focus,
.typeahead-selector .list-group-item:hover
  color #555
  text-decoration none
  background-color #f5f5f5
  cursor pointer

.editEvent
  .col-xs-1, .col-sm-1, .col-md-1, .col-lg-1, .col-xs-2, .col-sm-2, .col-md-2, .col-lg-2, .col-xs-3, .col-sm-3, .col-md-3, .col-lg-3, .col-xs-4, .col-sm-4, .col-md-4, .col-lg-4, .col-xs-5, .col-sm-5, .col-md-5, .col-lg-5, .col-xs-6, .col-sm-6, .col-md-6, .col-lg-6, .col-xs-7, .col-sm-7, .col-md-7, .col-lg-7, .col-xs-8, .col-sm-8, .col-md-8, .col-lg-8, .col-xs-9, .col-sm-9, .col-md-9, .col-lg-9, .col-xs-10, .col-sm-10, .col-md-10, .col-lg-10, .col-xs-11, .col-sm-11, .col-md-11, .col-lg-11, .col-xs-12, .col-sm-12, .col-md-12, .col-lg-12
    padding-right: 0
  .form-group
    margin-bottom 5px
    

h4.modal-title
  font-weight bold
  font-size 1.3em



// validate div after react bootstrap component
.validateDivAfterRBC
  color: #a94442
  margin-top: -15px
  margin-bottom: 5px
  
.dropzone > div
  width: 220px !important
  margin-left: 5px
  height: 147px !important
  padding: 5px


  
.editEvent .event-tags
  column-width 250px
  break-inside avoid

.editEvent .event-tag input
  position relative
  top 2px
.editEvent .event-tag span
  font-weight normal
  margin-left 7px
  cursor pointer





/*--------------------------------*\
    3. #Monthly Events
\*--------------------------------*/

#monthlyEvents .panel-body,
#publications .category > .panel-collapse > .panel-body
  padding 0 0
#publications .panel-body .publication .mce-tinymce
  margin -15px
#monthlyEvents .panel-group,
#publications .panel-group
  margin-bottom 0
#monthlyEvents .panel.month,
#publications .panel.month
  margin-top 0
  border-radius 0
  border-top-width 0
  border-right-width 0
  border-left-width 0
#monthlyEvents .panel.month > .panel-heading,
#publications .panel.month .panel-heading
  background-color transparent
#monthlyEvents .panel.month .panel-heading:hover,
#publications .panel.month .panel-heading:hover
  background-color #f5f5f5
#monthlyEvents .panel-heading,
#publications .panel-heading
  cursor pointer
#monthlyEvents .panel.month > .panel-heading h4,
#publications .panel.month > .panel-heading h4
  font-weight bold
  z-index 0
#monthlyEvents .panel.month:last-of-type,
#publications .panel.month:last-of-type
  border-bottom-width 0

#monthlyEvents .panel.month .panel-body table
  margin-left 0 !important
  width 100% !important

// TODO: import tinymce.css instead
// add other css for editor before
.monthlyEvent table.new
  width 100%
  border-collapse collapse
  border 1px solid black
.monthlyEvent .new thead
  background-color rgb(250, 191, 143)
.monthlyEvent .new tr,
.monthlyEvent .new th,
.monthlyEvent .new td
  border 1px solid black
  padding 5px
  padding-top 15px
  padding-bottom 15px
.monthlyEvent .new h1,
.monthlyEvent .new h2,
.monthlyEvent .new p
  text-align: center

.monthlyEvent .new h1
  font-size 1em
  font-weight bold
  display block
  margin-left auto
  margin-right auto
  margin-bottom 20px
.monthlyEvent .new h1+h1
  margin-top -15px
.monthlyEvent .new h2
  font-size 0.8em
  font-weight bold
  text-decoration underline
  margin-top 10px
.monthlyEvent .new p
  font-size 0.8em
  font-weight normal
  margin-top 10px
  margin-bottom 10px
.monthlyEvent .new p.bold
  font-weight bold





