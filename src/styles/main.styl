	.col400 {
		column-count 2
	}
  .modal-lg.modal-dialog {
    width 700px
  }
}

@media (min-width 992px) {
	.home-title h2 {
		margin-top 70px
		margin-bottom 70px
	}
	.col400 {
		column-count 3
	}
	.col500 {
		column-count 2
	}
  .modal-lg.modal-dialog {
    width 950px
  }
}

@media (min-width 1100px) {
  .modal-lg.modal-dialog {
    width 1000px
  }
}

@media (min-width 1300px) {
  .modal-lg.modal-dialog {
    width 1100px
  }
}
